@model TConsultigSA.Models.TipoNomina

<div class="d-flex">
    <partial name="_Sidebar" />

    <div id="page-content-wrapper" style="margin-left: 250px; padding: 20px; flex: 1; overflow-y: auto;">
        <div class="container">
            <h2 class="text-md-center mt-5 mb-5" style="color: #C20114;">Eliminar Tipo de Nómina</h2>

            <div class="alert alert-danger" role="alert">
                ¿Estás seguro de que deseas eliminar este tipo de nómina?
            </div>

            <dl class="row">
                <dt class="col-sm-2">Descripción</dt>
                <dd class="col-sm-10">@Model.Descripcion</dd>
            </dl>

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Eliminar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>
