@model IEnumerable<TConsultigSA.Models.HorasTrabajo>

<div class="d-flex">
    <partial name="_Sidebar" /> <!-- Sidebar conservado -->
    <!-- Contenido principal -->
    <div id="page-content-wrapper" style="margin-left: 250px; padding: 20px; flex: 1; overflow-y: auto;">
        <div class="container">
            <h2 class="text-center text-danger mb-5">Horas Trabajadas Mensuales</h2>

            <table class="table table-striped table-hover">
                <thead class="bg-light">
                    <tr>
                        <th>Nombre del Empleado</th>
                        <th>Mes</th>
                        <th>Horas Trabajadas</th>
                        <th>Observaciones</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var horas in Model)
                    {
                        <tr>
                            <td>@(horas.Empleado?.Nombre ?? "No asignado")</td> <!-- Nombre del empleado -->
                            <td>@horas.Fecha.ToString("MM/yyyy")</td> <!-- Mes y año -->
                            <td>@horas.TotalHoras</td> <!-- Total de horas -->
                            <td>@horas.Observaciones</td> <!-- Observaciones -->
                            <td>@(horas.Aprobado ? "Aprobado" : "Pendiente")</td> <!-- Estado -->
                            <td>
                                <a asp-action="Edit" asp-route-id="@horas.Id" class="btn btn-warning btn-sm">Editar</a>
                                <a asp-action="Details" asp-route-id="@horas.Id" class="btn btn-info btn-sm">Detalles</a>
                                <a asp-action="Delete" asp-route-id="@horas.Id" class="btn btn-danger btn-sm">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <a asp-action="Create" class="btn btn-success">Agregar Horas</a>
        </div>
    </div>
</div>
