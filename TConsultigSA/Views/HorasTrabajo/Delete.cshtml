@model TConsultigSA.Models.HorasTrabajo

<div class="d-flex">
    <partial name="_Sidebar" /> <!-- Sidebar conservado -->
    <!-- Contenido principal -->
    <div id="page-content-wrapper" style="margin-left: 250px; padding: 20px; flex: 1; overflow-y: auto;">
        <div class="container">
            <h2 class="text-center text-danger mb-5">Eliminar Registro de Horas</h2>

            <h4>Horas Trabajadas para @Model.Empleado.Nombre</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Fecha</dt>
                <dd class="col-sm-10">@Model.Fecha.ToString("MM/yyyy")</dd>

                <dt class="col-sm-2">Total Horas</dt>
                <dd class="col-sm-10">@Model.TotalHoras</dd>

                <dt class="col-sm-2">Aprobado</dt>
                <dd class="col-sm-10">@(Model.Aprobado ? "Sí" : "No")</dd>
            </dl>

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="text-center">
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
