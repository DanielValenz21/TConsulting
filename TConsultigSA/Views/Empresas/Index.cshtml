@model IEnumerable<TConsultigSA.Models.Empresa>

<div class="d-flex">
    <partial name="_Sidebar" /> <!-- Sidebar conservado -->
    <!-- Contenido principal -->
    <div id="page-content-wrapper" style="margin-left: 250px; padding: 20px; flex: 1; overflow-y: auto;">
        <div class="container">
            <h2 class="text-center text-danger mb-5">Empresas</h2>

            <table class="table table-striped table-hover">
                <thead class="bg-light">
                    <tr>
                        <th>Nombre</th>
                        <th>Dirección</th>
                        <th>Teléfono</th>
                        <th>Email</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var empresa in Model)
                    {
                        <tr>
                            <td>@empresa.Nombre</td>
                            <td>@empresa.Direccion</td>
                            <td>@empresa.Telefono</td>
                            <td>@empresa.Email</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@empresa.Id" class="btn btn-warning btn-sm">Editar</a>
                                <a asp-action="Delete" asp-route-id="@empresa.Id" class="btn btn-danger btn-sm">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <a asp-action="Create" class="btn btn-success">Agregar Empresa</a>
        </div>
    </div>
</div>
