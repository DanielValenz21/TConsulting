@{
    ViewData["Title"] = "Login";
}

<!-- Contenedor de fondo gris oscuro -->
<div style="background-color:#515a5a ; height: 100vh; display: flex; justify-content: center; align-items: center;">
    <div class="card" style="display: flex; flex-direction: row; width: 800px; height: 400px; box-shadow: 0px 0px 20px rgba(0,0,0,0.2);">

        <!-- Lado izquierdo -->
        <div style="flex: 1; background-color: white; padding: 40px;">
            <h2 class="text-center mb-3" style="color: #d10f09;">Iniciar Sesión</h2>
            <form asp-action="Login">
                <div class="form-group">
                    <label for="nombre" style="color: #696047;">Nombre de Usuario</label>
                    <input type="text" class="form-control" id="nombre" name="nombre" required />
                </div>
                <div class="form-group">
                    <label for="contrasenia" style="color: #696047;">Contraseña</label>
                    <input type="password" class="form-control" id="contrasenia" name="contrasenia" required />
                </div>
                <div class="d-flex justify-content-between mt-4" style="gap: 0.5rem;">
                    <button type="submit" class="btn" style="width: 48%;  background-color: #d10f09; color: white;">Iniciar Sesión</button>
                    <a asp-action="Welcome" asp-controller="Home" class="btn btn-secondary" style="width: 48%;">Volver</a>
                </div>
            </form>
        </div>

        <!-- Lado derecho-->
        <div style="flex: 1; background-image: url('@Url.Content("~/images/empresaG.jpg")'); background-size: cover; background-position: center;">
            <!-- Este div está vacío porque solo contiene la imagen de fondo -->
        </div>
    </div>
</div>


