@{
    ViewBag.Title = "Calcular Nómina";
}

<div class="d-flex">
    <partial name="_Sidebar" />

    <div id="page-content-wrapper" style="margin-left: 250px; padding: 20px; flex: 1; overflow-y: auto;">

        <div class="container">
            <h2 class="text-md-center mt-5" style="color: #C20114;">Calcular Nómina</h2>

            <div class="row mt-4">
                <div class="col-md-6 offset-md-3">
                    <form asp-action="CalcularNomina" method="post">
                        <div class="form-group">
                            <label for="idEmpleado">Empleado</label>
                            <select class="form-control" id="idEmpleado" name="idEmpleado" required>
                                <option value="">Seleccione un empleado</option>
                                @foreach (var empleado in ViewBag.Empleados)
                                {
                                    <option value="@empleado.Id">@empleado.Nombre</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="mes">Mes</label>
                            <select class="form-control" id="mes" name="mes" required>
                                <option value="">Seleccione un mes</option>
                                @for (int m = 1; m <= 12; m++)
                                {
                                    <option value="@m">@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(m)</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="año">Año</label>
                            <input type="number" class="form-control" id="año" name="año" value="@DateTime.Now.Year" required />
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Calcular</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>
