@model TConsultigSA.Models.NominaResultado

@{
    ViewBag.Title = "Resultado de Nómina";
}

<div class="d-flex">
    <partial name="_Sidebar" />

    <div id="page-content-wrapper" style="margin-left: 250px; padding: 20px; flex: 1; overflow-y: auto;">

        <div class="container">
            <h2 class="text-md-center mt-5" style="color: #C20114;">Resultado de Nómina para @Model.NombreEmpleado</h2>

            <div class="row mt-4">
                <div class="col-md-8 offset-md-2">
                    <table class="table">
                        <thead style="background-color: #C7D6D5;">
                            <tr>
                                <th>Concepto</th>
                                <th>Valor</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Salario Base</td>
                                <td>@Model.SalarioBase.ToString("C")</td>
                            </tr>
                            <tr>
                                <td>Horas Trabajadas</td>
                                <td>@Model.HorasTrabajadas</td>
                            </tr>
                            <tr>
                                <td>Horas Extras</td>
                                <td>@Model.HorasExtras</td>
                            </tr>
                            <tr>
                                <td>Bonificación</td>
                                <td>@Model.Bonificacion.ToString("C")</td>
                            </tr>
                            <tr>
                                <td>Descuento por Ausencias</td>
                                <td>-@Model.DescuentoAusencias.ToString("C")</td>
                            </tr>
                            <tr>
                                <td>Deducciones por Préstamos</td>
                                <td>-@Model.DeduccionesPrestamos.ToString("C")</td>
                            </tr>
                            <tr>
                                <td><strong>Salario Neto</strong></td>
                                <td><strong>@Model.SalarioNeto.ToString("C")</strong></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-12 text-left">
                    <a asp-action="CalcularNomina" class="btn btn-primary">Calcular otra Nómina</a>

                </div>
                                    <form asp-action="GenerarReciboNomina" method="post">
    <input type="hidden" name="IdEmpleado" value="@Model.IdEmpleado" />
    <input type="hidden" name="Mes" value="@Model.Mes" />
    <input type="hidden" name="Año" value="@Model.Año" />
    <button type="submit" class="btn btn-primary">Descargar Recibo en PDF</button>
</form>
            </div>
        </div>

    </div>
</div>
