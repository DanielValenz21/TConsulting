@model IEnumerable<TConsultigSA.Models.Prestamo>

<div class="d-flex">
    <partial name="_Sidebar" />

    <div id="page-content-wrapper" style="margin-left: 250px; padding: 20px; flex: 1; overflow-y: auto;">
        <div class="container">
            <h2 class="text-md-center mt-5" style="color: #C20114;">Lista de Préstamos</h2>

            <div class="row mt-4">
                <div class="col-12">
                    <table class="table">
                        <thead style="background-color: #C7D6D5;">
                            <tr>
                                <th>Empleado</th>
                                <th>Total</th>
                                <th>Cuotas Pendientes</th>
                                <th>Fecha de Préstamo</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var prestamo in Model)
                            {
                                <tr>
                                    <td>@prestamo.IdEmpleado</td>
                                    <td>@prestamo.Total</td>
                                    <td>@prestamo.CuotasPendientes</td>
                                    <td>@prestamo.FechaPrestamo.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@prestamo.Id" class="btn btn-warning">Editar</a>
                                        <form asp-action="Delete" asp-route-id="@prestamo.Id" method="post" style="display:inline;" onsubmit="return confirm('¿Estás seguro de que deseas eliminar este préstamo?');">
                                            <button type="submit" class="btn btn-danger">Eliminar</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row">
                <div class="col-12 text-left">
                    <a asp-action="Create" class="btn btn-primary mt-3">Nuevo Préstamo</a>
                </div>
            </div>
        </div>
    </div>
</div>
