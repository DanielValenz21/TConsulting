@model TConsultigSA.Models.Empleado

<div class="modal-header">
    <h5 class="modal-title">Detalles del Empleado</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <p><strong>DPI:</strong> @Model.DPI</p>
    <p><strong>Nombre:</strong> @Model.Nombre</p>
    <p><strong>Fecha de Contratación:</strong> @Model.FechaContratado.ToString("dd/MM/yyyy")</p>
    <p><strong>Puesto:</strong> @Model.IdPuesto</p>
    <p><strong>Departamento:</strong> @Model.IdDepartamento</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Teléfono:</strong> @Model.Telefono</p>
    <p><strong>Dirección:</strong> @Model.Direccion</p>
    <p><strong>Salario:</strong> @Model.Salario</p>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
</div>
