<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TConsultigSA</title>
    <!-- CSS de Bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
   
    <div class="container-fluid">
        <div class="row">
            @* Verificar si existe la sección DrawerSection *@
            @if (IsSectionDefined("DrawerSection"))
            {
                <div class="col-md-2">
                    @RenderSection("DrawerSection", required: false)
                </div>
                <div class="col-md-10">
                    @RenderBody()
                </div>
            }
            else
            {
                <div class="col-md-12">
                    @RenderBody()
                </div>
            }
        </div>
    </div>

    <!-- Incluir la sección Scripts para los scripts específicos de cada vista -->
    @RenderSection("Scripts", required: false)

    <!-- Scripts de jQuery y Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script> <!-- Cambiado de slim a min -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>