@model IEnumerable<TConsultigSA.Models.Rol>

<div class="d-flex" >
    <partial name="_Sidebar" />

    <div id="page-content-wrapper" style="margin-left: 250px; padding: 20px; flex: 1; overflow-y: auto;">

        <div class="container">
            <!-- Título centrado y con estilo -->
            <h2 class="text-md-center mt-5 mb-2" style="color: #C20114;">Lista de Roles</h2>

            <!-- Tabla de Roles -->
            <div class="row mt-4">
                <div class="col-12">
                    <table class="table">
                        <thead style="background-color: #C7D6D5;">
                            <tr>
                                <th>Descripción</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var rol in Model)
                            {
                                <tr>
                                    <td>@rol.Descripcion</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@rol.Id" class="btn btn-warning">Editar</a>
                                        <form asp-action="Delete" asp-route-id="@rol.Id" method="post" style="display:inline;" onsubmit="return confirm('¿Estás seguro de que deseas eliminar este rol?');">
                                            <button type="submit" class="btn btn-danger">Eliminar</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Botón para crear un nuevo rol -->
            <div class="row">
                <div class="col-12 text-left">
                    <a asp-action="Create" class="btn btn-primary mt-3">Crear Nuevo Rol</a>
                </div>
            </div>
        </div>

    </div>
</div>
