@model IEnumerable<TConsultigSA.Models.Puesto>

<div class="d-flex">
    <!-- Sidebar -->
    <partial name="_Sidebar" />

    <!-- Contenido principal -->
    <div id="page-content-wrapper" style="margin-left: 250px; padding: 20px; flex: 1; overflow-y: auto;">
        <div class="container">
            <h2 class="text-md-center mt-5" style="color: #C20114;">Lista de Puestos</h2>

            <div class="row mt-4">
                <div class="col-12">
                    <table class="table table-hover table-striped table-bordered">
                        <thead style="background-color: #C7D6D5;">
                            <tr>
                                <th>Descripción</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var puesto in Model)
                            {
                                <tr>
                                    <td>@puesto.Descripcion</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@puesto.Id" class="btn btn-warning">Editar</a>
                                        <form asp-action="Delete" asp-route-id="@puesto.Id" method="post" style="display:inline;" onsubmit="return confirm('¿Estás seguro de que deseas eliminar este puesto?');">
                                            <button type="submit" class="btn btn-danger">Eliminar</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row">
                <div class="col-12 text-left">
                    <a asp-action="Create" class="btn btn-primary mt-3">Nuevo Puesto</a>
                </div>
            </div>
        </div>
    </div>
</div>
