@model TConsultigSA.Models.HistorialAumento
@{
    var empleado = ViewBag.Empleado as TConsultigSA.Models.Empleado;
}

<div class="container">
    <h2>Registrar Aumento Salarial para @empleado?.Nombre</h2>
    <form asp-action="Create" method="post">
        <input asp-for="IdEmpleado" type="hidden" />

        <div class="form-group">
            <label asp-for="Fecha">Fecha</label>
            <input asp-for="Fecha" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="PorcentajeAumento">Porcentaje de Aumento (%)</label>
            <input asp-for="PorcentajeAumento" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="CantidadAumento">Cantidad de Aumento</label>
            <input asp-for="CantidadAumento" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="SalarioFinal">Salario Final</label>
            <input asp-for="SalarioFinal" class="form-control" />
        </div>

        <button type="submit" class="btn btn-success">Guardar Aumento</button>
        <a asp-action="Index" asp-route-idEmpleado="@empleado?.Id" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
