@model IEnumerable<TConsultigSA.Models.DepartamentoViewModel>

<div class="d-flex">
    <!-- Sidebar -->
    <partial name="_Sidebar" />

    <!-- Contenido principal -->
    <div id="page-content-wrapper" style="margin-left: 250px; padding: 20px; flex: 1; overflow-y: auto;">
        <div class="container">
            <h2 class="text-md-center mt-5" style="color: #C20114;">Lista de Departamentos</h2>

            <div class="row mt-4">
                <div class="col-12">
                    <table class="table table-striped table-hover">
                        <thead style="background-color: #C7D6D5;">
                            <tr>
                                <th>Nombre del Departamento</th>
                                <th>Líder</th>
                                <th>Empresa</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.DepartamentoNombre</td>
                                    <td>@item.LiderNombre</td>
                                    <td>@item.EmpresaNombre</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                            <i class="fas fa-edit"></i> Editar
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('¿Estás seguro de eliminar este departamento?');">
                                            <i class="fas fa-trash-alt"></i> Eliminar
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row">
                <div class="col-12 text-left">
                    <a asp-action="Create" class="btn btn-primary mt-3">
                        <i class="fas fa-plus"></i> Agregar Departamento
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

